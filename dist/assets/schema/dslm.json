{
	"definitions": {},
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://example.com/object1640184007.json",
	"title": "Root",
	"type": "object",
	"required": [
		"name",
		"rounds"
	],
  "additionalProperties": true,
	"properties": {
		"name": {
			"type": "string",
			"pattern": "^.*$"
		},
		"tags": {
			"type": "string",
			"pattern": "^.*$"
		},
		"rounds": {
			"$id": "#root/rounds",
			"title": "Rounds",
			"type": "array",
			"default": [],
			"items":{
				"$id": "#root/rounds/items",
				"title": "Items",
				"type": "object",
				"required": [
					"name",
					"type",
					"description",
					"questions"
				],
        "additionalProperties": false,
				"properties": {
					"name": {
						"$id": "/name",
						"title": "Name",
						"type": "string",
						"default": "",
						"pattern": "^.*$"
					},
					"type": {
						"$id": "#root/rounds/items/type",
						"title": "Type",
						"type": "string",
						"default": "",
						"enum": ["369","puzzel","opendeur","gallerij","finale","collectiefgeheugen"]
					},
					"description": {
						"$id": "#root/rounds/items/description",
						"title": "Description",
						"type": "string",
						"default": "",
						"pattern": "^.*$"
					},
					"questions": {
						"$id": "#root/rounds/items/questions",
						"title": "Questions",
						"type": "array",
						"default": [],
						"items":{
							"$id": "#root/rounds/items/questions/items",
							"title": "Items",
							"type": "object",
							"required": [
								"name"
							],
              "additionalProperties": true,
 						  "properties": {
								"name": {
									"$ref": "/name"
								},
                "do": {
									"$id": "#root/rounds/items/questions/items/do",
									"title": "Do",
									"type": "boolean",
									"default": false
								},
								"tags":{
									"type": "string"
								},
								"type":{
									"type": "string"
								},
								"help":{
									"type": "string"
								},
								"answer": {
									"$ref": "/name"
								},
                "words": {
									"$id": "#root/rounds/items/questions/items/words",
									"title": "Words",
									"type": "object",
									"default": {},
                  "items":{
      							"$id": "#root/rounds/items/questions/items/answers/name",
      							"title": "Items",
      							"type": "object",
      							"required": [
                      "w11","w12","w13","w14","w21","w22","w23","w24","w31","w32","w33","w34"
      							],
                    "additionalProperties": false,
       						  "properties": {
      								"w11": {"$ref": "/name"},
                      "w12": {"$ref": "/name"},
                      "w13": {"$ref": "/name"},
                      "w14": {"$ref": "/name"},
                      "w21": {"$ref": "/name"},
                      "w22": {"$ref": "/name"},
                      "w23": {"$ref": "/name"},
                      "w24": {"$ref": "/name"},
                      "w31": {"$ref": "/name"},
                      "w32": {"$ref": "/name"},
                      "w33": {"$ref": "/name"},
                      "w34": {"$ref": "/name"}
                    }
                  }
								},
                "answers": {
									"$id": "#root/rounds/items/questions/items/answers",
									"title": "Answers",
									"type": "array",
									"default": [],
                  "items":{
      							"$id": "#root/rounds/items/questions/items/answers/name",
      							"title": "Items",
      							"type": "object",
      							"required": [
      								"name"
      							],
                    "additionalProperties": false,
       						  "properties": {
      								"name": {
      									"$ref": "/name"
      								},
                      "media": {
      									"$ref": "/media"
      								},
                      "review": {
      									"$ref": "/media"
      								},
      								"mediatype": {
      									"$ref": "/mediatype"
      								}
                    }
                  }
								},
								"media": {
									"$id": "/media",
									"title": "Media",
									"type": "string",
									"default": "",
									"pattern": "^.*\\.[a-z0-9]{3,4}$"
								},
                "preview": {
									"$ref": "/media"
								},
								"mediatype": {
									"$id": "/mediatype",
									"title": "Mediatype",
									"type": "string",
									"default": "video",
									"enum": ["audio","video","image"]
								}
							}
						}
					}
				}
			}
		}
	}
}
